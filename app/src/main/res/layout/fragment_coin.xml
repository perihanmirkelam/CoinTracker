<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="coin"
            type="com.pmirkelam.cointracker.data.Coin" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <ImageView
            android:id="@+id/coin_item_icon"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_favorite_off" />

        <TextView
            android:id="@+id/coin_item_price"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:textSize="18sp"
            android:text="@{coin.currentPrice}"
            app:layout_constraintBottom_toBottomOf="@+id/coin_item_icon"
            app:layout_constraintEnd_toStartOf="@+id/icon_coin_item_favorite"
            app:layout_constraintStart_toEndOf="@+id/coin_item_icon"
            app:layout_constraintTop_toBottomOf="@+id/coin_item_symbol"
            tools:text="$1000000" />

        <TextView
            android:id="@+id/coin_item_symbol"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:textSize="18sp"
            android:text="@{coin.symbol}"
            app:layout_constraintBottom_toTopOf="@+id/coin_item_price"
            app:layout_constraintEnd_toStartOf="@+id/icon_coin_item_favorite"
            app:layout_constraintStart_toEndOf="@+id/coin_item_icon"
            app:layout_constraintTop_toBottomOf="@+id/coin_item_name"
            tools:text="BTC" />

        <TextView
            android:id="@+id/coin_item_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:textSize="18sp"
            android:text="@{coin.name}"
            app:layout_constraintBottom_toTopOf="@+id/coin_item_symbol"
            app:layout_constraintEnd_toStartOf="@+id/icon_coin_item_favorite"
            app:layout_constraintStart_toEndOf="@+id/coin_item_icon"
            app:layout_constraintTop_toTopOf="@+id/coin_item_icon"
            tools:text="Bitcoin" />

        <ImageView
            android:id="@+id/icon_coin_item_favorite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_favorite_off" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>